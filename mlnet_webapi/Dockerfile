FROM mcr.microsoft.com/dotnet/core/aspnet:2.2-stretch-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:2.2-stretch AS build
WORKDIR /src
COPY ["mlnet_webapi/mlnet_webapi.csproj", "mlnet_webapi/"]
RUN dotnet restore "mlnet_webapi/mlnet_webapi.csproj"
COPY . .
WORKDIR "/src/mlnet_webapi"
RUN dotnet build "mlnet_webapi.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "mlnet_webapi.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "mlnet_webapi.dll"]